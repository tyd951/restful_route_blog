<% include partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog: <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=put" method="post">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%=blog.body%></textarea>
        </div>
        
        <input class="ui big violet basic button" type="submit">
    </form>
</div>

<% include partials/footer%>